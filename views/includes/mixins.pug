mixin svg(dimensions,viewbox)
	svg(
		xmlns='http://www.w3.org/2000/svg'
		width=dimensions 
		height=dimensions 
		viewbox=viewbox
		fill='none' 
		stroke='currentColor' 
		stroke-width='2' 
		stroke-linecap='round' 
		stroke-linejoin='round')
		
mixin nav(activePage)
	nav
		if activePage == 'index'
			a(href='/words') words
			a(href='/resume') resume
		else if activePage == 'words'
			a.active(href='/words') words
			a(href='/resume') resume
		else if activePage == 'resume'
			a(href='/words') words
			a.active(href='/resume') resume
		else
			a(href='/words') words
			a(href='/resume') resume
